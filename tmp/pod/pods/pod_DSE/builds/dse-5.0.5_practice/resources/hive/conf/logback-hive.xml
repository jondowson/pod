<configuration>
  <!-- Errors were reported during translation. -->
  <!-- Could not find transformer for org.apache.hadoop.log.metrics.EventCounter -->
  <appender name="DRFA" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
    <!--for further documentation-->
    <File>${hive.log.dir}/hive.log</File>
    <encoder>
      <pattern>%-5level [%thread] %date{ISO8601} %X{service} %F:%L - %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${hive.log.dir}/hive.log.%d{yyyy-MM-dd}</fileNamePattern>
    </rollingPolicy>
  </appender>

  <logger name="Datastore.Schema" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="JPOX.General" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="DataNucleus" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="Datastore" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="org.apache.cassandra.config.DatabaseDescriptor" level="WARN"/>
  <logger name="JPOX.Query" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="JPOX.Datastore" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="JPOX.MetaData" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="JPOX.Plugin" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <logger name="JPOX.Enhancer" level="ERROR">
    <appender-ref ref="DRFA"/>
  </logger>
  <root level="WARN">
    <appender-ref ref="DRFA"/>
  </root>
</configuration>
