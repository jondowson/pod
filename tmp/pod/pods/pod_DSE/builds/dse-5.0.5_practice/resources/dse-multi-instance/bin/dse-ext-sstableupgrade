#!/bin/sh
#
#Copyright DataStax, Inc.
#Please see the included license file for details
#

#TITLE:Upgrade the sstables in the given cf (or snapshot) to the current version of Cassandra.

TOOL="sstableupgrade"

for tool in "$DSE_HOME"/bin/$TOOL \
                       "$DSE_HOME"/resources/cassandra/bin/$TOOL \
                       "$DSE_HOME"/resources/cassandra/tools/bin/$TOOL \
                       /usr/bin/$TOOL \
            "`dirname "$0"`/$TOOL"; do
    if [ -x "$tool" ]; then
        TOOL=$tool
        break
    fi
done

exec $TOOL "$@"
