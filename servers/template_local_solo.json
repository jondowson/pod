    "server_1":{
      "tag": "storage_1",
      "user": "<user>",
      "sshKey": "/home/<user>/.ssh/id_rsa",
      "target_folder": "/home/<user>/Desktop",
      "pubIp": "127.0.0.1",
      "prvIp": "127.0.0.1",
      "listen_address": "pubIp",
      "seeds": "127.0.0.1",
      "token": "",
      "dc": "dc1",
      "rack": "rack1",
      "mode": {
        "search": "false",
        "analytics": "false",
        "graph": "false"
      },
      "cass_data": [
        "/home/<user>/Desktop/dse-installations/data.logs/data",
        "/home/<user>/Desktop/dse-installations/data.logs/data2"
      ],
      "dsefs_data": [
        "/home/<user>/Desktop/dse-installations/data.logs/data/dsefs1/;1.0;5368709",
        "/home/<user>/Desktop/dse-installations/data.logs/data/dsefs2/;1.0;5368709"
      ]
    }
}
